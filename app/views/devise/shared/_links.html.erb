<%- if controller_name != 'sessions' %>
  <%= link_to "Inicie sessión", new_session_path(resource_name), class: 'devise-link' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrese", new_registration_path(resource_name), class: 'devise-link' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Olvidó su clave?", new_password_path(resource_name), class: 'devise-link' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "¿No recibió el correo de confirmación?", new_confirmation_path(resource_name), class: 'devise-link' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "¿Recibió información de desbloqueo?", new_unlock_path(resource_name), class: 'devise-link' %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'devise-link' %><br />
  <% end -%>
<% end -%>
