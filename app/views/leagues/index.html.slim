- @leagues.each do |league|
  	.large-card
      /.card-toolbar
        h4
          = league.name		
        .toolbar-icons
          i.material-icons thumb_up
          i.material-icons more_vert
      .card-body
        .card-top
          .card-image
            a href=("#{standerdize_url(league.website_link)}")
              = image_tag league.logo.url
          .card-info
            .section
              h3
                =league.name
              - if league.uses_liga_fc
                .powered-by
                  .text
                    span
                      | powered by:
                  = image_tag 'dark-logo copy.png'
            .section style='margin-bottom: 0.1em;'
              .days
                i.material-icons.m-r03em today
                span.info-span
                  | DÃ­as:  
                .small-flex.info-span
                  - league.days_played.each do |day_played|
                    .day id=("day-#{initial_letter_day(day_played)}")
                      = initial_letter_day(day_played)
            .section
              .players
                i.material-icons.m-r03em accessibility
                span.info-span Jugadores en cancha:
                - league.amount_of_players.each do |a|
                  span.player-amount.info-span
                    = a
            .section
              .location
                i.material-icons.m-r03em location_on
                span.info-span
                  = league.location.nil? ? "No disponible" : league.location
        .card-bottom


<!-- Colored FAB button with ripple -->
/button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect dark-blue-color"
  i.material-icons style="color: white;"
    | filter_list
